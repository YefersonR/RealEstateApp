@model List<Core.Application.DTOS.Estates.EstateRequest>

<div class="Container">
    <div>
        <form asp-controller="General" asp-action="Index">

        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">TipoDePropiedad</th>
                @*<th scope="col">ImagenDeLaPropiedad</th>*@
                <th scope="col">CodigoDeLaPropiedad</th>
                <th scope="col">TipoDeVenta</th>
                <th scope="col">ValorDeLaPropiedad</th>
                <th scope="col">CantidadDeHabitaciones</th>
                <th scope="col">CantidadDeBaños</th>
                <th scope="col">Tamaño</th>
                <th scope="col">Info</th>
                @if(ViewBag.IsLoggin == true)
                {
                    <th scope="col">AddToFavorite</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach(var data in Model){
                <tr>
                    <th scope="row">@data.Code</th>
                    <td>@data.EstateTypes.Name</td>
                    @*<td>@data.EstatesImgs.FirstOrDefault().ImgUrl</td>*@
                    <td>@data.Code</td>c
                    <td>@data.SellTypes.Name</td>
                    <td>@data.Price</td>
                    <td>@data.Rooms</td>
                    <td>@data.Toilets</td>
                    <td>@data.Area</td>
                    <td><a class="btn" asp-controller="General" asp-action="Estate" asp-route-code="@data.Code"> Info </a></td>
                    @if(ViewBag.IsLoggin == true)
                    {
                        <td><a class="btn" asp-controller="Client" asp-action="AddFav" asp-route-EstateId="@data.Id"> Add </a></td>
                    }
                </tr>
            }
        </tbody>
     </table>
</div>
