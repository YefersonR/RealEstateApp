@model Core.Application.DTOS.Estates.EstateRequest


<div class="Container">
    <div class="m-4">
        <div class="row">
            
            <div class="col-8" style="margin-bottom: 30px">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                  <div class="carousel-indicators">
                        @{var i = 0;}
                        @foreach (var imgcount in Model.EstatesImgs)
                        {
                            @if (i == 0)
                            {
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            }
                            @if (i > 0)
                            {
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to=@i></button>
                            }
                            i++;

                        }
                    </div>
                  <div class="carousel-inner">
                        @{var imgI = 0;}
                        @foreach(var imgs in Model.EstatesImgs)
                        {
                            @if(imgI == 0)
                            {
                                <div class="carousel-item active">
                                  <img src=@imgs.ImgUrl class="d-block w-100" alt="...">
                                </div>   
                            }
                            @if(imgI > 0)
                            {
                                <div class="carousel-item">
                                  <img src=@imgs.ImgUrl class="d-block w-100" alt="...">
                                </div>   
                            }
                            imgI++;
                        }
                  </div>
                  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>

                <div class="card border border-primary rounded" style="margin-bottom: 15px; margin-top: 30px">
                    <div class="card-body">
                        <h1 class="text-center">More Information</h1>
                        <div class="m-4">
                            <h3>Description</h3>
                            @Model.Description
                        </div>
                        <div class="m-4">
                            <h4>Details</h4>
                            <strong>Price: @Model.Price</strong>
                            <strong>Area: @Model.Area</strong>
                            <strong>Rooms: @Model.Rooms</strong>
                            <strong>Toilets: @Model.Toilets</strong>
                            <strong>SellTypes: @Model.SellTypes.Name</strong>
                        </div>
                        
                    </div>
                </div>
                <div class="card border border-primary rounded" style="margin-bottom: 15px; margin-top: 30px">
                    <div class="card-body">
                        <h1 class="text-center">Features</h1>
                        <div style="margin-left: 50px; margin-right: 30px">
                            @foreach(var features in Model.FeaturesRelations)
                            {
                                <button type="button" class="btn btn-primary" disabled>@features.Features.Name</button>
                            }
                        </div>
                    </div>
                </div>


            </div>
            
            
            <div class="col-4 card" style="margin-bottom: 30px">
                <div>
                    <div class="text-center">
                      <h2>Agent</h2>
                      <h3>Contact Information</h3>
                      <img class="rounded-4" src=@Model.Agente.ImageProfile style="height: 200px" alt="...">
                    </div>
                </div>
                <div class="card text-center">
                    <div class="card-body">
                        <h4>@Model.Agente.Name @Model.Agente.LastName</h4>
                        <a href="mailto:@Model.Agente.Email" class="h4 m-4">@Model.Agente.Email</a>
                        <br />
                        <br />
                        <a class="btn btn-outline-dark me-2 position-absolute top-100 start-50 translate-middle" asp-controller="Agent" asp-action="Info" asp-route-Id=@Model.AgentId>
                            More Estates
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
